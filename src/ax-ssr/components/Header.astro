import SlideHeader from '~/ax-csr/components/SlideHeader';
import HeaderLogoWithNav from './HeaderLogoWithNav.astro';

export type PageHeaderButon = {
  fg?: string;
  bg?: string;
  border?: string;
};

export type PageHeaderVariant = {
  background?: string;
  foreground?: string;
  signInButton?: PageHeaderButon;
  signUpButton?: PageHeaderButon;
  openAppButton?: PageHeaderButon;
  langPickedTheme?: 'light' | 'dark';
  fontWeight?: 'font-light' | 'font-medium';
};

type Props = {
  headerVariant: PageHeaderVariant;
};

const { headerVariant } = Astro.props as Props;
const {
  background = 'bg-msph-light-100',
  foreground = 'text-msph-dark-900',
  signInButton,
  signUpButton,
  openAppButton,
  langPickedTheme = 'light',
  fontWeight = 'font-medium',
} = headerVariant;
---

<SlideHeader client:load>
  <div
    class="msph-safe-container border border-msph-tint-200 bg-msph-light-300 shadow-md px-6 py-4 rounded-[25px]">
    <HeaderLogoWithNav />
  </div>
</SlideHeader>
<div class:list={['w-100', background]}>
  <header class="msph-safe-container py-4 px-3 lg:py-7">
    <HeaderLogoWithNav
      foreground={foreground}
      signInButton={signInButton}
      signUpButton={signUpButton}
      openAppButton={openAppButton}
      fontWeight={fontWeight}
      langPickedTheme={langPickedTheme}
    />
  </header>
  <div class:list={['msph-safe-container mt-12 mb-5 px-3', foreground]}>
    <slot />
  </div>
</div>
