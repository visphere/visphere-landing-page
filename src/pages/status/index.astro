import { PageHeaderVariant } from '~/ax-ssr/components/Header.astro';
import LostSection from '~/ax-ssr/components/LostSection.astro';
import { useTranslationsSSR } from '~/i18n/translations';
import MainLayout from '~/layouts/main-layout.astro';

const t = useTranslationsSSR('vsph.landingPage.status.pageContent');

const headerVariant: PageHeaderVariant = {};
---

<MainLayout i18nPageId="status" headerVariant={headerVariant}>
  <div slot="headerContent">
    <h1 class="vsph-root-header">
      {t('header')}
    </h1>
    <p class="mb-3">
      {t('paragraph')}
    </p>
  </div>
  <div slot="mainContent">
    <section class="bg-vsph-tint-100 py-8">
      <div class="vsph-safe-container px-3">APP STATUS ROOT ELEMENT</div>
    </section>
    <LostSection />
  </div>
</MainLayout>
