<MainLayout i18nPageId="download" headerVariant={headerVariant}>
  <div slot="headerContent">HEADER CONTENT</div>
  <div slot="mainContent">
    <h1>DOWNLOAD PAGE</h1>
    <div class="my-3">
      <b>{t('testProperty')}</b>
    </div>
