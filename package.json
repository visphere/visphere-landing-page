{
  "name": "moonsphere-landing-page",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "astro dev --config ./_vite/vite-server.config.mjs",
    "docker:dev": "astro build --config ./_vite/vite-docker-dev.config.mjs",
    "docker:prod": "astro build --config ./_vite/vite-docker-prod.config.mjs",
    "preview": "astro preview --config ./_vite/vite-server.config.mjs",
    "astro": "astro",
    "lint:check": "npx eslint src/**/*.{ts,tsx,astro}",
    "lint:fix": "npx eslint src/**/*.{ts,tsx,astro} --fix",
    "format": "npx prettier **/*.{ts,tsx,js,mjs,cjs,astro,json} --write",
    "types:check": "npx tsc --noEmit",
    "husky:add-pre-commit": "npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "husky:add-pre-push": "npx husky add .husky/pre-push \"yarn run types:check\"",
    "configure:husky": "npx husky install && yarn run husky:add-pre-commit && yarn run husky:add-pre-push"
  },
  "private": true,
  "author": {
    "name": "MoonSphere Systems",
    "email": "info@moonsphere.pl",
    "url": "https://moonsphere.pl"
  },
  "license": "Apache-2.0",
  "lint-staged": {
    "**/*.{ts,js,cjs,astro,json}": [
      "yarn run lint:fix",
      "yarn run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run types:check"
    }
  },
  "dependencies": {
    "@astrojs/node": "^5.3.3",
    "@astrojs/react": "^2.2.1",
    "@iconify/react": "^4.1.1",
    "astro": "^2.10.7",
    "astro-i18n-aut": "^0.3.2",
    "astro-icon": "^0.8.1",
    "axios": "^1.4.0",
    "body-scroll-lock": "^4.0.0-beta.0",
    "change-case": "^4.1.2",
    "clsx": "^2.0.0",
    "flat": "^5.0.2",
    "framer-motion": "^10.16.0",
    "ramda": "^0.29.0",
    "react": "^18.2.0",
    "react-bootstrap-icons": "^1.10.3",
    "react-dom": "^18.2.0",
    "undici": "^5.23.0"
  },
  "devDependencies": {
    "@astrojs/sitemap": "^2.0.1",
    "@astrojs/tailwind": "^4.0.0",
    "@astrojs/ts-plugin": "^1.1.1",
    "@tailwindcss/forms": "^0.5.4",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/flat": "^5.0.2",
    "@types/node": "^20.4.10",
    "@types/ramda": "^0.29.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vicgutt/tailwindcss-font-face": "^0.2.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-plugin-astro": "^0.28.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-react": "^7.33.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "prettier-plugin-astro": "^0.11.0",
    "rollup-plugin-terser": "^7.0.2",
    "tailwind-scrollbar-variants": "^1.1.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  }
}
