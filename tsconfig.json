{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "paths": {
      "~/env/*": ["src/environments/*"],
      "~/i18n/*": ["src/i18n/*"],
      "~/layouts/*": ["src/layouts/*"],
      "~/pages/*": ["src/pages/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
